<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Registrar Alumno"
            android:textColor="#D64B4B"
            android:textSize="36sp" />

        <EditText
            android:id="@+id/editTextIdStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Matrícula del Alumno"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextNameStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nombre del Alumno"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextAgeStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Edad del alumno"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextSemesterStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Semestre del Alumno"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextGenderStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Género"
            android:inputType="textPersonName" />

        <Spinner
            android:id="@+id/spinnerStudentCareer"
            android:layout_width="match_parent"
            android:layout_height="35dp" />

        <Button
            android:id="@+id/buttonRegisterStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_redondo"
            android:backgroundTint="#4CAF50"
            android:layout_margin="5dp"
            android:text="Registrar" />

        <Button
            android:id="@+id/buttonConsultStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_redondo"
            android:backgroundTint="#F3C332"
            android:layout_margin="5dp"
            android:text="Consultar" />

        <Button
            android:id="@+id/buttonUpdateStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_redondo"
            android:backgroundTint="#0AA0E4"
            android:layout_margin="5dp"
            android:text="Editar" />

        <Button
            android:id="@+id/buttonDeleteStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_redondo"
            android:backgroundTint="#E43333"
            android:layout_margin="5dp"
            android:text="Eliminar" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/buttonConsultAllStudent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_redondo"
                android:backgroundTint="#5EAC38DF"
                android:layout_margin="5dp"
                android:text="Alumnos Registrados" />
        </RadioGroup>

    </LinearLayout>
</RelativeLayout>